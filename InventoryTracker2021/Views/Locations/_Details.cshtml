@model InventoryTracker2021.Models.Location

<table style="width:300px; border:0 none none;">
    <tr>
        <td style="text-align:center; background-color:gray; color:white;" colspan="2">
            <h3>@Html.DisplayFor(modelItem => modelItem.chrNickName)</h3>
            <h5>@Html.DisplayFor(modelItem => modelItem.chrStorageName)</h5>
            <a href="tel:+@Model.chrPhone" style="color:white;">@Html.DisplayFor(modelItem => modelItem.chrPhone)</a>
            <h5>@Html.DisplayFor(modelItem => modelItem.chrAddress1)</h5>
            <h5>@Html.DisplayFor(modelItem => modelItem.chrGateCode)</h5>
            <h5>@Html.DisplayFor(modelItem => modelItem.chrIntructions)</h5>
        </td>
    </tr>
</table>