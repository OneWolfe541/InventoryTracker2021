@model InventoryTracker2021.Models.PasswordResetModel

@{
    ViewBag.Title = "Reset Password";
}

<h2>Reset Password</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.HiddenFor(model => model.UserID)
        @Html.HiddenFor(model => model.UserName)
        @*@Html.LabelFor(model => model.UserName, "User Name", htmlAttributes: new { @class = "control-label col-md-2" })*@
        <div class="col-md-10">
            User <b>@Model.UserName</b>, enter a new password and then re-enter the same password for confirmantion.
            <br />
            Remember that all passwords are case sensitive.
            @*<div style="margin-top:7px;">
                    @Html.DisplayFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })*@
        </div>
    </div>
    <br />
    <div class="form-group">
        @Html.LabelFor(model => model.Password1, "Enter Password", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.PasswordFor(model => model.Password1, new { @class = "form-control text-box single-line" })
            @Html.ValidationMessageFor(model => model.Password1, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Password2, "Re-enter Password", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.PasswordFor(model => model.Password2, new { @class = "form-control text-box single-line" })
            @Html.ValidationMessageFor(model => model.Password2, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Submit" class="btn btn-default" />
        </div>
    </div>
</div>

}

